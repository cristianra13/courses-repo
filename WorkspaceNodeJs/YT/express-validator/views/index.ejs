<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Express Validators!</title>

    <style>
        body{
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }
    </style>
  </head>
  <body>

    <div class="container">
        <h1>Express Validators!</h1>

        <form action="/registrar" method="POST">
            <div class="mb-3">
              <label for="txtNombre" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="txtNombre" name="txtNombre" value="<% if (typeof valores != 'undefined'){%> <%= valores.txtNombre%><%}%>" >
            </div>
            <div class="mb-3">
              <label for="txtEmail" class="form-label">Email</label>
              <input type="text" class="form-control" id="txtEmail" name="txtEmail" value="<% if (typeof valores  != 'undefined') {%><%= valores.txtEmail%><%}%>" >
            </div>
            <div class="mb-3">
                <label class="form-label" for="txtEdad">Edad</label>
                <input type="text" class="form-control" id="txtEdad" name="txtEdad" value="<% if (typeof valores  != 'undefined') { %><%=valores.txtEdad%><% } %>" >
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>

        <% if (typeof validaciones  != 'undefined') { %>
          <% validaciones.forEach( (validacion) => { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong><%= validacion.msg %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% }) %>
        <% } %>

    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

  </body>
</html>