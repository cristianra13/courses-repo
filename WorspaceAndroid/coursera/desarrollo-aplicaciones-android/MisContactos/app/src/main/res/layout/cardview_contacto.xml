<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cvContacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/corner_radius_cardView"
    >

    <include
        android:id="@+id/actionBarCustom"
        layout="@layout/actionbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"

        >

        <ImageView
            android:id="@+id/ivFotoContactoCardView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/alien_grandma"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            />

        <ImageButton
            android:id="@+id/btnLike"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/hand_like"
            />

        <TextView
            android:id="@+id/tvNombreCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/size_name_cardview"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvTelefonoCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pTelefono"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>


